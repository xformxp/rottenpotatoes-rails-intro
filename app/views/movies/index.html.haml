-#  This file is app/views/movies/index.html.haml
%h2 All Movies

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th{class: @style[:title]}= link_to "Movie Title", movies_path(:title), id: :title_header
      %th Rating
      %th{class: @style[:release_date]}= link_to "Release Date", movies_path(:release_date), id: :release_date_header
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
